{
  "name": "video",
  "title": "Videos",
  "version": "0.10.3",
  "description": "Video gallery",
  "icon": "server/assets/add-videos-image.png",
  "categories": ["media"],
  "shortcuts": [
    {
      "name": "openVideosList",
      "title": "Videos",
      "icon":"theme://play.png",
      "screen": "@.VideosList",
      "adminPages": [{
        "page": "shoutem.cms.CmsPage",
        "title": "Content",
        "parameters": {
          "schema": "@.Videos"
        }
      }, {
          "page":"shoutem.layouts.LayoutPage",
          "title": "Layout"
      }]
    }
  ],
  "screens": [
    {
      "name": "VideosSmallList",
      "title": "Small list",
      "image": "server/assets/screens/small-list.png",
      "extends":"@.VideosList"
    },
    {
      "name": "VideosList",
      "title": "Big list",
      "image": "server/assets/screens/big-list.png",
      "navigatesTo": [
        "@.VideoDetails"
      ]
    },
    {
      "name": "VideoDetails",
      "title": "Details"
    }
  ],
  "dataSchemas": [
    {
      "name": "Videos",
      "path": "server/data-schemas/Videos.json"
    }
  ]
}
