{
  "name": "auth",
  "version": "0.5.2",
  "title": "User Authentication",
  "icon": "server/assets/add-authentication-image.png",
  "description": "Show user profile, sign out user",
  "platform": ">=1.0.19",
  "categories": ["users"],
  "repository": {
    "type": "git",
    "url": "https://github.com/shoutem/extensions"
  },
    "screens": [{
      "name": "LoginScreen"
    }, {
      "name": "RegisterScreen"
    }],
  "shortcuts": [{
      "title": "Logout",
      "description": "Allows user to logout from application",
      "name": "logoutAction",
      "action": "@.logoutAction"
    }],
  "settingsPages": [{
    "page": "@.SettingsPage",
    "title": "Settings"
  }, {
    "page": "@.ProvidersPage",
    "title": "Authentication providers"
  }],
  "pages": [{
    "name": "SettingsPage",
    "type": "component",
    "path": "dummy.js"
  }, {
    "name": "ProvidersPage",
    "type": "component",
    "path": "dummy.js"
  }],
  "settings": {
    "signupEnabled": true,
    "allScreensProtected": false,
    "providers": {
      "email": {
        "enabled": true
      },
      "facebook": {
        "enabled": false
      },
      "twitter": {
        "enabled": false
      }
    }
  }
}
