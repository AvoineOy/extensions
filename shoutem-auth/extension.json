{
  "name": "auth",
  "version": "0.4.2",
  "title": "User authentication",
  "icon": "server/assets/add-authentication-image.png",
  "description": "Shoutem user authentication extension",
  "categories": ["users"],
    "screens": [{
      "name": "LoginScreen"
    }, {
      "name": "RegisterScreen"
    }],
  "shortcuts": [{
      "title": "Login",
      "description": "Allows user to login or switch to register screen",
      "name": "openLogin",
      "screen": "@.LoginScreen"
    }, {
      "title": "Logout",
      "description": "Allows user to logout from application",
      "name": "logoutAction",
      "action": "@.logoutAction"
    }],
  "settingsPages": [{
    "page": "@.SettingsPage",
    "title": "Settings"
  }, {
    "page": "@.ProvidersPage",
    "title": "Authentication providers"
  }],
  "pages": [{
    "name": "SettingsPage",
    "type": "component",
    "path": "dummy.js"
  }, {
    "name": "ProvidersPage",
    "type": "component",
    "path": "dummy.js"
  }],
  "settings": {
    "signupEnabled": true,
    "allScreensProtected": false,
    "providers": {
      "email": {
        "enabled": true
      },
      "facebook": {
        "enabled": false
      },
      "twitter": {
        "enabled": false
      }
    }
  }
}
